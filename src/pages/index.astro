---
import { formDataToObject } from "astro:actions";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import homeImage from "../../public/home.svg";
import Pricing from "../components/Pricing.astro";

// const data = await Astro.request.formData();
---

<Layout title="Bedford Software">
 <main class="min-w-full justify-center grid sm:grid-flow-col grid-flow-row sm:grid-cols-2 sm:py-10 sm:px-40 p-4 pb-20">
  <div class="grid place-content-center gap-6 z-10">
   <h1 class="text-4xl md:text-6xl font-bold sm:leading-6 leading-10 pt-12 sm:pt-0 tracking-tight">Web development for your small business.</h1>
   <p class="text-base md:text-xl sm:w-3/4 text-zinc-600 font-regular">
    We build <span class="font-semibold">100% hand-coded</span> websites crafted to suit your business's needs. Located in
    <span class="font-medium">Bedford, Virginia</span>.
   </p>
   <!-- <a
    href="/contact"
    class="py-2 px-5 items-center gap-x-2 text-base font-semibold rounded-lg shadow-sm bg-sky-600 text-white disabled:pointer-events-none hover:bg-sky-800 hover:cursor-pointer hover:transition duration-500 w-fit"
    >Reach Out!</a
   > -->
   <a
    href="/contact"
    type="button"
    class="appearance-none inline-flex hover:shadow-2xl transition-all duration-300 hover:scale-105 items-center group space-x-2.5 bg-bedford-blue text-white py-3 px-5 rounded-2xl cursor-pointer w-fit"
    ><span class="w-full font-semibold text-base">Reach Out</span><svg
     class="inline-block h-6"
     viewBox="0 0 24 25"
     fill="none"
     xmlns="http://www.w3.org/2000/svg"
     ><path d="M3 12.4999H21L14 19.4999M14 5.5L18 9.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
     ></path></svg
    ></a
   >
  </div>
  <div class="sm:grid hidden place-content-center justify-end">
   <Image src={homeImage} alt="A bird sitting on a nest of eggs." height={700} />
  </div>
 </main>
 <!-- <Pricing /> -->
</Layout>
